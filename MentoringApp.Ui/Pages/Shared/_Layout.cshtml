@using MentoringApp.Ui.Services.Interfaces
@inject IProfileService ProfileService

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Mentoring</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MentoringApp.Ui.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-page="/Index">Mentoring</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse"
								data-bs-target="#mainNav" aria-controls="mainNav"
								aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="mainNav">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" asp-page="/Profile/Index">Profile</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-page="/Mentorships/Index">Mentorships</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-page="/Admin/Index">Admin</a>
						</li>
					</ul>

					<ul class="navbar-nav ms-auto">
						@if (User.Identity != null && User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<span class="navbar-text me-2">
									@{
										var profile = await ProfileService.GetMyProfileAsync(throwOnError: false);
										var displayName = !string.IsNullOrWhiteSpace(profile?.FirstName)
										? profile.FirstName
										: User.Identity.Name;
									}
									@displayName
								</span>
							</li>
							<li class="nav-item">
								<form method="post" asp-page="/Logout" class="d-inline">
									<button type="submit" class="btn btn-link nav-link">
										Logout
									</button>
								</form>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-page="/Login">Login</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2026 - MentoringApp.Ui - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
